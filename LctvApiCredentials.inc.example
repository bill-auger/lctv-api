<?php
/**
 * User-defined LiveEdu.tv API credentials.
 *
 * @package LctvApi\Credentials
 * @since 0.0.3
 * @version 0.0.9
 */


/** Set client id.
 *  This must match your app client id defined on the LCTV API website.
 */
define( 'LCTV_CLIENT_ID', 'YOUR_LCTV_CLIENT_ID' );

/** Set client secret.
 *  This must match your app client secret defined on the LCTV API website.
 */
define( 'LCTV_CLIENT_SECRET', 'YOUR_LCTV_CLIENT_SECRET' );

/** Set API redirect url.
 *  For the default installation this is public path to authorize.php.
 *  This must match one that you defined on the LCTV API website.
*/
define( 'LCTV_REDIRECT_URL', 'YOUR_LCTV_REDIRECT_URL' );

/** Set master account name to access public api information. */
define( 'LCTV_MASTER_USER', 'YOUR_LCTV_USER_NAME' );

/** Set data store class. ex: LctvApiDataStoreFlatFiles or LctvApiDataStoreMySQL */
define( 'LCTVAPI_STORAGE_CLASS', 'LctvApiDataStoreFlatFiles' );

/**
 * Set path for flat file data storage.
 * This directory must be writable by the webserver user (e.g. www-data)
 */
define( 'LCTVAPI_STORAGE_PATH', __DIR__ . '/tokens/' );

/**
 * Set cache expire time.
 */
define( 'LCTVAPI_CACHE_EXPIRES_IN', 300 );

/**
 * MySQL Data Store Settings.
 */
/** Set database name. */
define( 'LCTVAPI_DB_NAME', '' );

/** Set database user. */
define( 'LCTVAPI_DB_USER', '' );

/** Set database password. */
define( 'LCTVAPI_DB_PASSWORD', '' );

/** Set database host. */
define( 'LCTVAPI_DB_HOST', '' );
